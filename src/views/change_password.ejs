<%- include("./partials/header"); -%>
<body class="bg-slate-900 mx-4">
    <%- include("./partials/navigation"); -%>
    <div>
        <form name="change_password" 
        action="/auth/change_password" method="post">
            <input type="hidden" name="id" value="<%=user._id%>" />
            <div class="text-3xl text-white">Change your password for <%= user.username %></div>
            <div class="text-white">This may or may not have been prompted by your administrator</div>
            <div>
                <label for="password" class="text-white">Password:</label>
                <input name="password" id="password" type="password" minLength="8" required />
            </div>
            <div>
                <button type="submit" class="text-xl rounded-md bg-slate-600/20 border 
                border-slate-100 text-white px-4 py-2 mx-4 my-4">Submit</button>
            </div>
        </form>
    </div>
</body>
